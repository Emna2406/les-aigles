    <div class="row" style="display: flex;align-items: center;justify-content: center;">

        <div class="row">

            <div class="card">
                <div class="card-body">

                    <h6 class="card-title">Liste Chambres</h6>

                    <table class="table table-striped">
                        <thead>
                        <tr>


                            <td>Nom de chambre </td>
                            <td>Nom de Service </td>
                            <td> Capacite</td>
                            <td>prix</td>
                            <td>etat</td>
                            <td>Modifier</td>
                            <td>Supprimer</td>




                        </tr>
                        </thead>
                        <tbody>
                        {% for chambre in c %}
                            <tr>
                                <td> {{ chambre.num }}</td>
                                <td>{{ chambre.service.nom}}</td>

                                <td> {{ chambre.capacite }}</td>
                                <td> {{ chambre.prix }}</td>
