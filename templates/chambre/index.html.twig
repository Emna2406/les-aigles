                                    <a  class="btn btn-sm btn-primary" href="{{ path('modifChambre',{'id':chambre.id}) }}"> Modifier</a>
                                     
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="{{ path('supp_chambre',{'id':chambre.id}) }}"> Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}





                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
{% endblock %}
