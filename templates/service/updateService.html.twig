{% extends 'base.html.twig' %}
 {% block body %}
     <div  style="display: flex;align-items: center; justify-content: center">

       {{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }}
         <h6 class="mb-4" >Modifier Service</h6>
         <div class="mb-3">
             <label for="inputText" class="form-label">Nom Service</label>
             <div class="form-label">
                 {{ form_widget(f.nom,{'class':'form-control'}) }}
                  {{ form_errors(f.nom,{'class':'text-danger'}) }}
             </div>

         </div>
         <div class="mb-3">
             <label for="inputText" class="form-label">description </label>
             <div class="form-label">
                 {{ form_widget(f.description,{'class':'form-control'}) }}
                  {{ form_errors(f.description,{'class':'text-danger'}) }}
             </div>

         </div>
         <div class="mb-3">
             <label for="inputText" class="form-label">image</label>
             <div class="form-label">
                 {{ form_widget(f.image,{'class':'form-control'}) }}
                 {{ form_errors(f.image,{'class':'text-danger'}) }}
             </div>

         </div>
         <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

             {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
         </div>


         {{ form_end(f) }}
     </div>
 {% endblock %}
