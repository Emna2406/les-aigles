 {% extends 'base.html.twig' %}
 {% block body %}
     <div  style="display: flex;align-items: center; justify-content: center;padding: 10px;">

         <div class="card">
             <div class="card-body">
                 <h5 class="card-title">Ajouter Services Backend ADMIN</h5>


         {{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }}

             <div class="mb-3">
                 <label for="inputText" class="form-label">Nom Service</label>
                 <div class="col-sm-10">
                     {{ form_widget(f.nom,{'class':'form-control'}) }}
                     {{ form_errors(f.nom,{'class':'text-danger'}) }}
                 </div>

             </div>
         <div class="mb-3">
             <label for="inputText" class="form-label">description </label>
             <div class="form-label">
                 {{ form_widget(f.description,{'class':'form-control'}) }}
                 {{ form_errors(f.description,{'class':'text-danger'}) }}
             </div>

         </div>
                 <div class="row ">
                     <label for="inputEmail3" class="col-sm-3 col-form-label">Image</label>
                     <div class="col-sm-15">
                         {{form_widget(f.image,{'attr':{'class':'form-control'}}) }}
                         {{form_errors(f.image,{'attr':{'class':'text-danger'}}) }}
                     </div>
                 </div>

         </div>
         <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

             {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
         </div>


         {{ form_end(f) }}
     </div>
         </div>
     </div>
     </div>

 {% endblock %}
