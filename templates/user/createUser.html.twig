{% extends 'base.html.twig' %}
{% block title %}CreateUser{% endblock %}
{% block body %}
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add New User</h6>
        {{ form_start(f,{attr:{novalidate:"novalidate"}})}}

            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Nom</label>
                <div class="col-sm-10">
                    {{form_widget(f.nom,{'attr':{'class':'form-control'}})}}
                    {{form_errors(f.nom,{'attr':{'class':'text-danger'}})}}
                </div>
            </div>


            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Prenom</label>
                <div class="col-sm-10">
                    {{form_widget(f.prenom,{'attr':{'class':'form-control'}})}}
                    {{form_errors(f.prenom,{'attr':{'class':'text-danger'}})}}

                </div>
            </div>


            <div class="row mb-3">
                <label for="" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    {{form_widget(f.email,{'attr':{'class':'form-control'}})}}
                    {{form_errors(f.email,{'attr':{'class':'text-danger'}})}}


                </div>
            </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">User Name</label>
            <div class="col-sm-10">
                {{form_widget(f.username,{'attr':{'class':'form-control'}})}}
                {{form_errors(f.username,{'attr':{'class':'text-danger'}})}}

            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                {{form_widget(f.pass,{'attr':{'class':'form-control'}})}}
                {{form_errors(f.pass,{'attr':{'class':'text-danger'}})}}

            </div>
        </div>
        <br>
        {{form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}})}}
        {{form_widget(f.Reset,{'attr':{'class':'btn btn-primary'}})}}



        {{ form_end(f)}}
    </div>

{% endblock %}