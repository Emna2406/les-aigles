{% extends 'base.html.twig' %}
        {% block body %}






                <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Users</h6>
                        <table class="table">
                                <thead>
                                <tr>
                                        <th scope="col"> NOM</th>
                                        <th scope="col">PRENOM</th>
                                        <th scope="col">EMAIL</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Password</th>
                                        <th scope="col">MODIFIER</th>
                                        <th scope="col">SUPPRIMER</th>

                                </tr>
                                </thead>
                                <tbody>



                                {% for user in b %}
                                <tr>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.pass }}</td>
                                        <td><a class="btn btn-success" href="{{ path('modifuser',{'id':user.iduser}) }}">Modifier</a></td>
                                        <td><a class="btn btn-danger" href="{{ path('supp_user',{'id':user.iduser}) }}">Supprimer</a></td>


                                </tr>

                                {% endfor %}
                                </tbody>
                        </table>
                </div>

        {% endblock %}